<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" tools:context="com.rio4special.app.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pad_20dp"
        android:paddingLeft="@dimen/pad_15dp"
        android:paddingRight="@dimen/pad_15dp" android:paddingTop="@dimen/pad_20dp">

        <ImageView android:id="@+id/imageView" android:layout_width="200dp"
            android:layout_height="160dp" android:layout_gravity="center_horizontal"
            android:adjustViewBounds="false" android:src="@drawable/logo_login_rio4special" />

        <EditText android:id="@+id/user"
            style="@style/editext_graybg"
            android:layout_width="wrap_content" android:layout_height="65dp"
            android:layout_marginTop="@dimen/pad_5dp"
            android:drawableLeft="@drawable/ic_username" android:hint="Nome completo">
            <requestFocus />
        </EditText>

        <EditText android:id="@+id/email"
            style="@style/editext_graybg"
            android:layout_width="wrap_content" android:layout_height="65dp"
            android:layout_marginTop="@dimen/pad_5dp"
            android:drawableLeft="@drawable/ic_username" android:hint="E-mail"
            android:inputType="textEmailAddress">
        </EditText>

        <EditText android:id="@+id/confirmaEmail" style="@style/editext_graybg"
            android:layout_width="wrap_content" android:layout_height="65dp"
            android:layout_marginTop="@dimen/pad_5dp" android:drawableLeft="@drawable/ic_username"
            android:hint="Confirmar e-mail" android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/pwd"
            style="@style/editext_graybg"
            android:layout_width="wrap_content" android:layout_height="65dp"
            android:layout_marginTop="@dimen/pad_5dp"
            android:drawableLeft="@drawable/ic_pwd" android:hint="Senha"
            android:inputType="textPassword">
        </EditText>

        <EditText android:id="@+id/confirmarSenha" style="@style/editext_graybg"
            android:layout_width="wrap_content" android:layout_height="65dp"
            android:layout_marginBottom="10dp" android:layout_marginTop="@dimen/pad_5dp"
            android:drawableLeft="@drawable/ic_pwd" android:hint="Confirmar Senha"
            android:inputType="textPassword" />

        <LinearLayout
            android:id="@+id/main" android:layout_width="370dp" android:layout_height="match_parent"
            android:orientation="horizontal" android:weightSum="1">

            <Button
                android:id="@+id/btnReg"
                style="@style/btn_white_large" android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/pad_10dp" android:layout_weight="0.47"
                android:text="@string/register" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>