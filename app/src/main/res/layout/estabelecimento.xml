<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white"
    tools:context="com.rio4special.app.Login">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:gravity="center_horizontal" android:orientation="vertical"
        android:paddingBottom="@dimen/pad_20dp" android:paddingLeft="@dimen/pad_15dp"
        android:paddingRight="@dimen/pad_15dp" android:paddingTop="@dimen/pad_20dp">

        <TextView android:id="@+id/textEstabelecimento" android:layout_width="352dp"
            android:layout_height="wrap_content" android:layout_weight="10" android:text="CEFET-RJ"
            android:textAppearance="?android:attr/textAppearanceLarge" android:textColor="#3c433d"
            android:textSize="40dp" android:textStyle="bold" />

        <TextView android:id="@+id/textDescritivo" android:layout_width="350dp"
            android:layout_height="wrap_content" android:paddingBottom="@dimen/pad_20dp"
            android:text="(Centro Tecnológico)"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#3c433d" />

        <LinearLayout android:id="@+id/main" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="8"
            android:orientation="horizontal">

            <Button android:id="@+id/btnRegistroEntrada" style="@style/btn_white_large"
                android:layout_width="wrap_content" android:layout_height="65dp"
                android:layout_weight="1" android:text="Registro de Entrada" />

            <Button android:id="@+id/btnComentario" style="@style/btn_white_large"
                android:layout_width="wrap_content" android:layout_height="65dp"
                android:layout_marginBottom="50dp" android:layout_marginLeft="@dimen/pad_10dp"
                android:layout_weight="1" android:text="Comentários" />
        </LinearLayout>

        <RatingBar android:id="@+id/ratingBar" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_weight="10" android:paddingBottom="@dimen/pad_20dp" />

        <ExpandableListView android:id="@+id/expListViewAcess" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_weight="10" />

    </LinearLayout>

</ScrollView>